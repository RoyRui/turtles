#!/usr/bin/env ruby
def fullpath(path); File.expand_path(path, File.realpath(__FILE__)); end

def show_usage
  puts "Usage: turtles <command>"
  puts
  puts "Commands:"
  puts "  prepare"
  puts "  config"
  puts "  stemcells"
  puts "  deploy-bosh [keyfile] [keyname]"
  puts "  deploy-cf"
  puts "  ip <service>"
end

if ARGV.length < 1
  show_usage
  exit
end

case ARGV[0]
when "prepare"
  puts "Preparing turtles environment..."
  exec fullpath("../../scripts/prepare.sh")

when "config"
  exec "cd #{fullpath("../..")} && rake config"

when "stemcells"
  puts "Building and uploading stemcells to swift..."
  exec "cd #{fullpath("../..")} && rake micro_stemcell"
  exec "cd #{fullpath("../..")} && rake stemcell"
  exec "cd #{fullpath("../..")} && rake upload_stemcells"

when "deploy-bosh"
  # TODO: stemcell arguments
  puts "Deploying BOSH..."
  keyfile = ARGV[1]
  keyname = ARGV[2] or "bosh-#{Time.now.hash.to_s(16)[-6,6]}"
  exec "cd #{fullpath("../..")} && rake download_stemcells"
  cmd = "cd #{fullpath("../..")} && rake micro_bosh_deploy"
  if keyfile
    cmd << " KEYFILE=#{keyfile}"
    cmd << " KEYNAME=#{keyname}"
  end
  exec cmd

when "deploy-cf"
  puts "Deploying Cloud Foundry..."

when "ip"
  $:.unshift(fullpath("../../lib"))
  require 'turtles'
  puts Turtles::NamedIP.get_ip(ARGV[1])

else
  puts "Invalid command."
  show_usage
end
