--- 
name: cloudfoundry
director_uuid: <%= director_uuid %>

release:
    name: appcloud
    version: 120

compilation:
  workers: 2
  network: private
  cloud_properties:
    instance_type: m1.small

update:
  canaries: 1
  canary_watch_time: 3000-90000
  update_watch_time: 3000-90000
  max_in_flight: 1
  max_errors: 1 

networks:
- name: private
  type: dynamic
  cloud_properties:
    security_groups:
      - <%= security_group %>
- name: public 
  type: vip
  cloud_properties:
    security_groups:
      - <%= security_group %>

resource_pools:
- name: dea
  network: private
  size: 4
  stemcell: 
    name: bosh-stemcell
    version: 0.6.7
  cloud_properties: 
    instance_type: m1.small
  env: 
    bosh:
      password: $6$XLI2E4O.Z9$FgtcuRKhGwEhvdFnRnQcb0Qnh7LXnzxTtAKjmB2Fylf3AmQ6TJ.hBKp7b7t0ThXLnFQYQVkFOGJdwSs0erMNY/
- name: infrastructure
  network: private
  size: 10
  stemcell: 
    name: bosh-stemcell
    version: 0.6.7
  cloud_properties:
    instance_type: m1.small
  env: 
    bosh:
      password: $6$XLI2E4O.Z9$FgtcuRKhGwEhvdFnRnQcb0Qnh7LXnzxTtAKjmB2Fylf3AmQ6TJ.hBKp7b7t0ThXLnFQYQVkFOGJdwSs0erMNY/

jobs:
- name: debian_nfs_server
  template: debian_nfs_server
  instances: 1
  resource_pool: infrastructure
  persistent_disk: 8192
  networks:
  - name: private
    default: 
    - dns
    - gateway
  - name: public
    static_ips: 
    - <%= nfs_ip %>
- name: cloud_controller
  template: cloud_controller
  instances: 2
  resource_pool: infrastructure
  networks: 
  - name: private
    default: 
    - dns
    - gateway
- name: dea
  template: dea
  instances: 4
  resource_pool: dea
  networks: 
  - name: private
    default: 
    - dns
    - gateway
- name: router
  template: router
  instances: 1
  resource_pool: infrastructure
  networks: 
  - name: private
    default: 
    - dns
    - gateway
  - name: public
    static_ips: 
    - <%= router_ip %>
- name: stager
  template: stager
  instances: 1
  resource_pool: infrastructure
  networks: 
  - name: private
    default: 
    - dns
    - gateway
- name: ccdb_postgres
  template: ccdb_postgres
  instances: 1
  resource_pool: infrastructure
  persistent_disk: 8192
  networks: 
  - name: private
    default: 
    - dns
    - gateway
  - name: public
    static_ips: 
    - <%= ccdb_ip %>
- name: vcap_redis
  template: vcap_redis
  instances: 1
  resource_pool: infrastructure
  networks: 
  - name: private
    default: 
    - dns
    - gateway
  - name: public
    static_ips: 
    - <%= vcap_redis_ip %>
- name: health_manager
  template: health_manager
  instances: 1
  resource_pool: infrastructure
  networks: 
  - name: private
    default: 
    - dns
    - gateway
- name: nats
  template: nats
  instances: 1
  resource_pool: infrastructure
  networks: 
  - name: private
    default: 
    - dns
    - gateway
  - name: public
    static_ips: 
    - <%= nats_ip %>



